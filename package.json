  "bugs": {
    "url": "https://github.com/4rtamis/schema-in-the-mist/issues"
  },
  "homepage": "https://github.com/4rtamis/schema-in-the-mist#readme",
  "type": "module",
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/node": "^24.5.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "zod": "^4.1.11"
  }
